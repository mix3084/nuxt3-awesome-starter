{
	"name": "@nuxt-awesome/theme",
	"version": "2.0.12",
	"description": "a Nuxt 3 template and boilerplate with a lot of useful features. Nuxt 3 + Tailwindcss + Nuxt Layer",
	"author": "viandwi24",
	"private": false,
	"license": "MIT",
	"type": "module",
	"main": "./nuxt.config.ts",
	"repository": {
		"type": "git",
		"url": "git://github.com/viandwi24/nuxt3-awesome-starter"
	},
	"files": [
		"assets",
		"components",
		"composables",
		"layouts",
		"modules",
		"pages",
		"public",
		"stores",
		"app.config.ts",
		"app.vue",
		"nuxt.config.ts",
		"nuxt.schema.ts",
		"tailwind.config.ts",
		"tsconfig.json"
	],
	"scripts": {
		"build": "nuxt build ./app",
		"dev": "nuxt dev ./app --no-clear",
		"generate": "nuxt generate ./app",
		"preview": "nuxt preview ./app",
		"postinstall": "nuxt prepare ./app",
		"dev:starter": "nuxt dev ./examples/starter",
		"lint": "eslint --ext \".ts,.js,.vue\" --ignore-path .eslintignore .",
		"lint:fix": "eslint --fix --ext \".ts,.js,.vue\" --ignore-path .eslintignore .",
		"release": "release-it"
	},
	"dependencies": {
		"@nuxt/content": "^2.13.2",
		"@nuxt/devtools": "^1.4.1",
		"@nuxtjs/color-mode": "^3.4.4",
		"@nuxtjs/i18n": "8.4.0",
		"@nuxtjs/tailwindcss": "^6.12.1",
		"@pinia/nuxt": "^0.5.4",
		"@vueuse/core": "^10.11.1",
		"@vueuse/nuxt": "^10.11.1",
		"nuxt-headlessui": "^1.2.0",
		"nuxt-icon": "^0.6.10",
		"pinia": "^2.2.2",
		"sass": "^1.78.0",
		"stringify": "^5.2.0",
		"tailwindcss": "^3.4.10",
		"unplugin-vue-components": "^0.25.2"
	},
	"devDependencies": {
		"@nuxtjs/eslint-config-typescript": "^12.1.0",
		"@nuxtjs/eslint-module": "^4.1.0",
		"consola": "^3.2.3",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.2.1",
		"nuxt": "^3.13.1",
		"prettier": "^3.3.3",
		"release-it": "^16.3.0",
		"serve": "^14.2.3",
		"typescript": "^5.5.4",
		"vue-tsc": "1.8.22"
	},
	"release-it": {
		"github": {
			"release": true,
			"releaseName": "v${version}"
		},
		"git": {
			"commitMessage": "chore(release): release v${version}"
		}
	}
}
